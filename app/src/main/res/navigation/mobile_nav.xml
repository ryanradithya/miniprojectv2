<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_nav"
    app:startDestination="@id/homeFragment">


    <!-- Home (tile list) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.miniprojectv2.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_productDetailFragment"
            app:destination="@id/productDetailFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>

    <!-- Product Detail -->
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.miniprojectv2.ProductDetailFragment"
        android:label="Product"
        tools:layout="@layout/fragment_product_detail" >
        <action
            android:id="@+id/action_p_to_cart"
            app:destination="@id/cartFragment"
            app:popUpTo="@id/productDetailFragment"
            app:popUpToInclusive="false"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <!-- Cart -->
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.miniprojectv2.CartFragment"
        android:label="Cart"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cart_to_checkout"
            app:destination="@id/checkoutFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <!-- Checkout -->
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="com.example.miniprojectv2.CheckoutFragment"
        android:label="Checkout"
        tools:layout="@layout/fragment_checkout">
        <action
            android:id="@+id/action_checkout_to_transaction"
            app:destination="@id/transactionsFragment" />
    </fragment>



    <!-- Transactions -->
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.example.miniprojectv2.TransactionsFragment"
        android:label="Transactions"
        tools:layout="@layout/fragment_transactions" />

    <!-- Account -->
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.miniprojectv2.AccountFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account" />

    <!-- Penjual -->
    <fragment
        android:id="@+id/jualFragment"
        android:name="com.example.miniprojectv2.JualFragment"
        android:label="Jual Produk"
        tools:layout="@layout/fragment_jual" />


    <fragment
        android:id="@+id/beliFragment"
        android:name="com.example.miniprojectv2.BeliFragment"
        android:label="Beli"
        tools:layout="@layout/fragment_beli">

        <action
            android:id="@+id/action_beli_to_productDetailFragment"
            app:destination="@id/productDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
</navigation>

<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="@android:color/white" />

    <!-- Border tipis -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Sudut melengkung -->
    <corners android:radius="50dp" />

    <!-- Padding opsional -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="2dp"
        android:bottom="2dp" />
</shape>

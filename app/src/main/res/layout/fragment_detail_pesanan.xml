<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_product_name"
            android:text="Nama Produk"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_product_price"
            android:text="Rp 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_product_qty"
            android:text="x0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_product_total"
            android:text="Total: Rp 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_product_status"
            android:text="Status: -"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_product_expedition"
            android:text="Expedisi: -"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_product_tracking"
            android:text="Resi: -"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_product_date"
            android:text="Tanggal: -"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginVertical="16dp"/>

        <!-- Bagian Review -->
        <TextView
            android:text="Beri Ulasan:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:id="@+id/rating_stars"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"/>

        <EditText
            android:id="@+id/et_review"
            android:hint="Tulis ulasan Anda..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top|start"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_submit_review"
            android:text="Kirim Ulasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6D9773"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>

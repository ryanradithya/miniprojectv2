<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_marginTop="?attr/actionBarSize">

    <!-- 🔘 Tombol Logout di Baris Sendiri -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_gravity="end"
        android:layout_marginBottom="8dp" />

    <!-- 🔍 Search Bar di Bawah Tombol Logout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_search"
        android:padding="8dp"
        android:layout_marginBottom="12dp">

        <!-- TextBox pencarian -->
        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Cari produk..."
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:textColor="#222"
            android:textSize="14sp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="6dp" />

        <!-- Tombol filter (ikon) -->
        <ImageButton
            android:id="@+id/btn_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_filter"
            android:contentDescription="Filter Produk"
            app:tint="#555" />
    </LinearLayout>

    <!-- Judul Rekomendasi -->
    <TextView
        android:id="@+id/rekomendasi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rekomendasi untukmu"
        android:textSize="18sp"
        android:padding="8dp" />

    <!-- RecyclerView Horizontal -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rekomendasi_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:padding="8dp" />

    <!-- Judul Belanja -->
    <TextView
        android:id="@+id/belanja_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belanja Sekarang"
        android:textSize="18sp"
        android:padding="8dp" />

    <!-- RecyclerView Produk Utama -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />
</LinearLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:paddingBottom="100dp"
    android:clipToPadding="false"
    android:fillViewport="true">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gambar produk (rasio 1:1) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_fotoproduk" />
        </FrameLayout>

        <!-- Nama produk -->
        <TextView
            android:id="@+id/product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="4dp" />

        <!-- Harga -->
        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Stok -->
        <TextView
            android:id="@+id/product_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Deskripsi (expandable) -->
        <TextView
            android:id="@+id/product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:ellipsize="end"
            android:maxLines="2"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp"
            android:scrollHorizontally="false"
            android:singleLine="false" />


    <!-- ðŸ”¹ Container untuk Rating dan Review -->
        <LinearLayout
            android:id="@+id/rating_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="16dp">

            <!-- ðŸ”¸ Baris rata-rata rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_average_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:id="@+id/rating_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- ðŸ”¸ Daftar review -->
            <LinearLayout
                android:id="@+id/review_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Tambah/Kurang + Tombol Tambah ke Keranjang -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_button_jumlah"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/btn_minus"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-"
                android:textSize="30sp"
                android:textColor="#555555"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/tv_qty"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/btn_plus"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textSize="30sp"
                android:textColor="#555555"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Tombol keranjang -->
        <Button
            android:id="@+id/btn_add_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TAMBAH KE KERANJANG"
            android:backgroundTint="#6D9773"
            android:textColor="@android:color/white"
            android:textAllCaps="true" />
    </LinearLayout>
</ScrollView>
